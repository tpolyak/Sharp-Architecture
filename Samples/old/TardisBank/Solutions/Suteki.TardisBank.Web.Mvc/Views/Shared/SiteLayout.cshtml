<!DOCTYPE html>
@{
    Layout = "";
}

<html lang="en"
      xmlns:og="http://opengraphprotocol.org/schema/"
      xmlns:fb="http://www.facebook.com/2008/fbml">
<head>
    <meta name="description" content="A free, online, pocket money bank account for parents and kids." />
    <title>Tardis Bank</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="shortcut icon" href="@Url.Content("~/Content/Images/TardisBankLogo_16.png")">

    <meta property="og:title" content="Tardis Bank" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://tardisbank.com/" />
    <meta property="og:image" content="http://tardisbank.com/Content/Images/TardisBankLogo_128.png" />
    <meta property="og:site_name" content="Tardis Bank" />
    <meta property="fb:admins" content="176890825659044" />
    <meta property="og:description" content="Online pocket money banking for kids and parents" />

    @Html.Action("Index", "Analytics")

</head>
<body>
    <div class="container_12" id="header">
        <div class="grid_2">
            &nbsp;
        </div>
        <div class="grid_6">
            <br />
            <h1>Tardis Bank</h1>
            <p>Pocket money on-line banking for kids and parents</p>
        </div>
        <div class="grid_4" id="login_status">@Html.Action("DisplayGreeting", "User")</div>
        <div class="clear"></div>
    </div>
    <div class="clear"></div>

    <div class="container_12 menuContainer">
        @Html.Action("Index", "Menu")
    </div>
    <div class="clear"></div>

    <div id="messageArea" class="container_12">
    </div>

    <div class="container_12" id="content">

        <br />
        <!-- start of content -->
        @RenderBody()

        <!-- end of content -->
        <div class="clear"></div>
        <br />
    </div>
    <div class="clear"></div>

    <div class="container_12" id="footer">
        <div class="grid_12">
            @Html.ActionLink("Legal", "Legal", "Home") | <a href="http://www.apache.org/licenses/LICENSE-2.0.html">Copyright &copy; Apache 2</a> | <a href="http://github.com/mikehadlow/Suteki.TardisBank">Open Source</a>
        </div>
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
    <div id="fb-root"></div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")




<script type="text/javascript">
    $(function() {
        app.common.nav.setRootUrl('@Url.Action("Index", "Home")');
    });
    
    window.fbAsyncInit = function () {
        FB.init({ appId: '176890825659044', status: true, cookie: true, xfbml: true });
    };
    (function () {
        var e = document.createElement('script'); e.async = true;
        e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
        document.getElementById('fb-root').appendChild(e);
    }());
</script>

    @RenderSection("scripts", required: false)
</body>
</html>
