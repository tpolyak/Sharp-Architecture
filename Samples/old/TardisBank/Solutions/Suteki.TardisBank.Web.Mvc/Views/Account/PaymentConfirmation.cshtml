@model Suteki.TardisBank.Web.Mvc.Controllers.ViewModels.MakePaymentViewModel

@{
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

<h2>Payment Confirmed</h2>
<p>You have transferred @Model.Amount.ToString("c") to @Model.ChildName's account with the description "@Model.Description".</p>
<p>@Html.ActionLink(Model.ChildName + "'s Account", "ParentView", "Account", new { id = @Model.ChildId }, null)</p>


